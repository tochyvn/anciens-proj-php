<?xml version="1.0" encoding="iso-8859-15"?>
<spool nom="jobamax_metier">
  <initialisation>
    <url>http://www.jobijoba.com/fr/offres-d-emploi-par-metier</url>
  </initialisation>
  <navigation>
     <profondeur>10</profondeur>
     <pause>0</pause>
     <timeout>60</timeout>
     <thread>5</thread>
    <rang>
      <a_suivre>
         <expression>&lt;a href=&quot;(\/fr\/offres-d-emploi-par-metier\/[A-Z])&quot;&gt;[A-Z]&lt;\/a&gt;</expression>
         <remplacement>http://www.jobijoba.com$1</remplacement>
         <limite>30</limite>
         <suivant>1</suivant>
       </a_suivre>
    </rang>
    <rang>
      <a_capturer>
         <expression>(.+)</expression>
         <remplacement>$1</remplacement>
         <option>s</option>
         <limite>1</limite>

       </a_capturer>
    </rang>
  </navigation>
  <capture>
     <destination>metier.csv</destination>
     <echappement>\</echappement>
     <separateur>;</separateur>
     <encapsulateur>&quot;</encapsulateur>
     <ligne>CRLF</ligne>
     <enlever_balise>1</enlever_balise>
     <enlever_entite>1</enlever_entite>
    <exclusion>
      <fichier>exclusion.csv</fichier>
    </exclusion>
    <parent>
       <expression>(.+)</expression>
	   <remplacement>$1</remplacement>

	   <option>s</option>
     </parent>
    <enfant>
       <expression>(.+)</expression>
	   <remplacement>$1</remplacement>
	   <limite>1</limite>
	   <option>s</option>
     </enfant>
    <colonnes>
      <colonne mode="expression" nom="Nom">
        <expression>class=&quot;gray_arrow&quot;&gt;([^&lt;]+)&lt;\/a&gt;&lt;\/li&gt;</expression>
        <remplacement>$1</remplacement>
        <recherche>ENFANT</recherche>        <limite>250</limite>
      </colonne>
    </colonnes>
  </capture>
</spool>
